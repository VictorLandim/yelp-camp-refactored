<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.3.3/dist/semantic.min.css">
    <% if (styles) { -%>
        <% styles.forEach(e => { -%>
            <link rel="stylesheet" href="<%= e %>">
        <% }); -%>
    <% } -%>
    <link rel="icon" href="data:image/png;base64,">
    <style>
        .menu-button {
            margin-left: 0.5em !important;
        }

        #flash-message {
            padding: 30px 0;
            background-color: #1b1c1d;
        }

        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            padding-bottom: 50px;
        }

        .main {
            min-height: calc(95vh - 70px);
            padding-bottom: 50px;
        }

        footer {
            padding: 15px 0px;
            font-size: 14px;
            text-align: center;
            background-color: #1b1c1d;
            color: #fff;
        }
    </style>
        
    <title>
        <%= title %>
    </title>
</head>

<body>
    <section id="menu">
        <div class="ui inverted vertical masthead center aligned segment">
            <div class="ui container">
                <div class="ui large secondary inverted pointing menu">
                    <div class="item">
                        <a href="/">
                            <i class="iu icon utensils"></i>
                            Discovereats</a>
                    </div>
                    <a class="<%= path === '/restaurants' ? 'active' : '' %> item" href="/restaurants">Home</a>
                    <div class="right item">
                        <% if (!user) { -%>
                            <a href="/login" class="ui inverted button menu-button">Log in</a>
                            <a href="/register" class="ui inverted button menu-button">Sign Up</a>
                        <% } else {  -%>
                            <a class="ui inverted button menu-button">Logged in as <%= user.username %></a>
                            <a href="/logout" class="ui inverted button menu-button">Log out</a>
                        <% } -%>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <% if (message.success.length > 0) { -%>
        <section id="flash-message">
            <div class="ui container">
                <div class="ui success message">
                    <div class="header">
                        <%= message.success -%>
                    </div>
                    <p>
                    </p>
                </div>
            </div>            
        </section>
    <% } -%>

    <% if (message.error.length > 0) { -%>
        <section id="flash-message">
            <div class="ui container">
                <div class="ui error message">
                    <div class="header">
                        <%= message.error -%>
                    </div>
                    <p>
                    </p>
                </div>
            </div>            
        </section>
    <% } -%>

    <% if (message.info.length > 0) { -%>
        <section id="flash-message">
            <div class="ui container">
                <div class="ui info message">
                    <div class="header">
                        <%= message.info -%>
                    </div>
                    <p>
                    </p>
                </div>
            </div>            
        </section>
    <% } -%>